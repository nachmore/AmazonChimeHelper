<Window x:Class="ChimeHelper.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChimeHelper"
        mc:Ignorable="d"
        Title="About" Height="225" Width="400">
  <StackPanel>
    <Border Background="#192A38" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="42" VerticalAlignment="Top" Width="574">
      <TextBlock VerticalAlignment="Center" FontSize="25" Foreground="White" FontWeight="Light" Margin="10,0,0,0">Chime Helper</TextBlock>
    </Border>

    <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
      <TextBlock Text="Version:"/>
      <TextBlock Text="{Binding Version}"/>
    </StackPanel>

    <TextBlock TextWrapping="Wrap" Margin="10,10,0,0">Simple application to detect Chime meeting pins in your Outlook calendar and give you 1-click access to them.</TextBlock>
    <TextBlock Margin="10,20,0,0">Source Code:
      <Hyperlink NavigateUri="https://github.com/nachmore/AmazonChimeHelper">https://github.com/nachmore/AmazonChimeHelper</Hyperlink>
    </TextBlock>

    <TextBlock HorizontalAlignment="Right" Margin="0,25,5,0">© 2020, Oren Nachman</TextBlock>

  </StackPanel>
</Window>
